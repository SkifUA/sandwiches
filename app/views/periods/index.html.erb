<p id="notice"><%= notice %></p>

<h1><%= t('periods.name') %></h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>Finish date</th>
      <th>Days</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periods.each do |period| %>
      <tr>
        <td><%= period.start_date %></td>
        <td><%= period.finish_date %></td>
        <td><%= period.days %></td>
        <td><%= link_to t('periods.view.link_report'), period %></td>
        <td>
          <% if can?(:update, period) %>
            <%= link_to 'Edit', edit_period_path(period) %>
          <% end %>
        </td>
        <td>
          <%= link_to t('periods.name'), period_orders_path(period) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can?(:create, Period) %>
  <%= link_to t('periods.view.title_new'), new_period_path %>
<% end %>
