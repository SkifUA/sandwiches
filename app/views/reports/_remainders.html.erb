<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <h3><%= t('reports.stocks') %></h3>
    <% remainders.each do |purchase| %>
        <div><%= purchase.product.name_with_unit %>: <%= purchase.left %>
          <% unless  purchase.left_finished.zero?%>
            / <%= "#{t('purchases.tab.left_finished')}: #{purchase.left_finished}" %>
          <% end %>
        </div>
    <% end %>
  </div>
  <div class="col-md-3"></div>
</div>