<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <h3><%= t('products.name') %></h3>
    <table class="table">
      <tbody>
        <% products.each do |product| %>
          <tr>
            <td>
              <%= product.name %>
            </td>
            <td>
              <%= product.quantity %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-3"></div>
</div>