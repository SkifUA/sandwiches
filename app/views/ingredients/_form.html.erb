<% if ingredient.errors.any? %>
    <% ingredient.errors.full_messages.each do |error| %>
        <%= alert_generator(error) %>
    <% end %>
<% end %>

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">

    <%= form.hidden_field :dish_id, id: :ingredient_dish_id, value: @dish.id %>

    <div class="form-group">
      <%= form.label t('ingredient.tab.product') %>
      <%= form.collection_select(:product_id, Product.all, :id, :name_with_unit,
                                 {
                                     include_blank: true
                                 },
                                 class: 'form-control'
          )
      %>
    </div>

    <div class="form-group">
      <%= form.label t('ingredient.tab.quantity') %>
      <%= form.number_field :quantity, id: :ingredient_quantity, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= form.submit t('ingredient.save'), class: 'btn btn-primary btn-block' %>
    </div>

  </div>
  <div class="col-md-3"></div>
</div>
