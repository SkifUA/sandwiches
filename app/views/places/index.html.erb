<p id="notice"><%= notice %></p>

<h1><%= t('places.name') %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.description %></td>
        <td><%= place.user.name || place.user.email %></td>
        <td><%= link_to 'Show', place %></td>
        <td>
          <% if can?(:update, place)  %>
            <%= link_to 'Edit', edit_place_path(place) %>
          <% end %>
        </td>
        <td>
          <% if can?(:destroy, place)  %>
            <%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can?(:create, Place)  %>
  <%= link_to 'New Place', new_place_path %>
<% end %>
