<%= form_with(model: place, local: true) do |form| %>
  <% if place.errors.any? %>
    <% place.errors.full_messages.each do |error| %>
      <%= alert_generator(error) %>
    <% end %>
  <% end %>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="field">
        <%= form.label  t('places.tab.name') %>
        <%= form.text_field :name, id: :place_name, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label t('places.tab.description') %>
        <%= form.text_area :description, id: :place_description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label t('places.tab.cook') %>
        <%= form.collection_select(:user_id, User.cooks, :id, :name,
                                   {
                                       include_blank: true
                                   },
                                   class: 'form-control'
            )
        %>
      </div>

      <div class="actions">
        <%= form.submit t('places.save'), class: 'btn btn-primary btn-block'%>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
<% end %>
