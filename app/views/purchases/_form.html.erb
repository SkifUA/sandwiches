<%= form_with(model: purchase, local: true) do |form| %>
  <% if purchase.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(purchase.errors.count, "error") %> prohibited this purchase from being saved:</h2>

      <ul>
      <% purchase.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.number_field :user_id, id: :purchase_user_id %>
  </div>

  <div class="field">
    <%= form.select :product_id, id: :purchase_product_id do %>
        <% @products.each do |product| %>
            <%= content_tag(:option, "#{product.name}, #{product.unit}", value: product.id) %>
        <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :date_purchase %>
    <%= form.date_select :date_purchase, id: :purchase_date_purchase %>
  </div>

  <div class="field">
    <%= form.label :bought %>
    <%= form.number_field :bought, id: :purchase_bought %>
  </div>

  <div class="field">
    <%= form.label :cost %>
    <%= form.number_field :cost_float, id: :purchase_cost_float, step: 0.01 %>
  </div>

  <div class="field">
    <%= form.label :left %>
    <%= form.number_field :left, id: :purchase_left %>
  </div>

  <div class="field">
    <%= form.label :left_finished %>
    <%= form.number_field :left_finished, id: :purchase_left_finished %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :place_description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
