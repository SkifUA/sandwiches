<div class="container">
  <%= provide(:title, t('purchases.name')) %>
  <h3>
    <strong><%= t('purchases.tab.period') %>: </strong>
    <%= @period.name %>
  </h3>

  <p>
    <strong><%= t('purchases.tab.date_purchase') %></strong>
    <%= date_by_format(@purchase.date_purchase) %>
  </p>

  <p>
    <strong><%= t('purchases.tab.user') %>: </strong>
    <%= @purchase.user.name %>
  </p>

  <p>
    <strong><%= t('purchases.tab.product') %>: </strong>
    <%= @purchase.product.name_with_unit %>
  </p>

  <p>
    <strong><%= t('purchases.tab.bought') %>: </strong>
    <%= @purchase.bought %>
  </p>

  <p>
    <strong><%= t('purchases.tab.cost') %>: </strong>
    <%= @purchase.cost_float %>
  </p>

  <p>
    <strong><%= t('purchases.tab.description') %>: </strong>
    <%= @purchase.description %>
  </p>
</div>

<div class="container btn-container">
  <% if can?(:update, @purchase) %>
      <%= render 'shared/link_default', { path: edit_period_purchase_path(@period, @purchase), title: t('button.edit') } %>
  <% end %>
  <%= render 'shared/link_default', { path: period_purchases_path(@period), title: t('button.back') } %>
</div>

