    <ul>
    <% order.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form.hidden_field :period_id, id: :order_period_id, value: @period.id %>

<div class="form-group">
  <%= form.label 'Dish' %>
  <%= form.collection_select(:dish_id, Dish.all, :id, :name,
                             {
                                 include_blank: true
                             },
                             class: 'form-control'
      )
  %>
</div>

<div class="form-group">
  <%= form.label 'Cook' %>
  <%= form.collection_select(:user_id, User.cooks, :id, :name,
                             {
                                 include_blank: true
                             },
                             class: 'form-control'
      )
  %>
</div>

<div class="field">
  <%= form.label :quantity %>
  <%= form.number_field :quantity, id: :order_quantity %>
</div>

<div class="actions">
  <%= form.submit %>
</div>

