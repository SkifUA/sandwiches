<% if can?(:create, @dish)  %>
  <%= link_to 'Edit', edit_dish_path(@dish) %>
<% end %>
<% if can?(:create, Ingredient)  %>
  <%= link_to 'Edit recipe', dish_ingredients_path(@dish) %>|
<% end %>
