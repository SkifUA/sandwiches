<p id="notice"><%= notice %></p>

<h1><%= t('dishes.name') %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Prise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.name %></td>
        <td><%= dish.description %></td>
        <td><%= dish.prise %></td>
        <td><%= link_to 'Show', dish %></td>
        <td>
          <% if can?(:update, dish)  %>
            <%= link_to 'Edit', edit_dish_path(dish) %>
          <% end %>
        </td>
        <td>
          <% if can?(:destroy, dish)  %>
            <%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can?(:create, Dish)  %>
  <%= link_to 'New Dish', new_dish_path %>
<% end %>
